#.screenrc
# sekoja nova ssh sesija ja otvaram so screen za da si logiram se shto sum pravel
# mesto /usr/bin/ssh imam alias ssh=~/ssh_so_screen

term xterm
#da mi gi logira site ssh sesii vo poedinechen fajl
#logfile	/home/georgis/screen_logovi/%t_%Y%m%d.%n
logfile    /home/georgis/screen_logovi/%t_%Y%m%d_%c.%n
deflog on
logtstamp on
startup_message off

# da mi raboti skroll-ot na mausot
# http://fscked.org/writings/225notes/unix/.screenrc
# http://www4.informatik.uni-erlangen.de/~jnweiger/screen-faq.html
termcapinfo xterm* ti@:te@
altscreen on

hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H %{..Y} %m/%d %C%a "

